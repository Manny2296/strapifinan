{
  "kind": "collectionType",
  "collectionName": "creditos",
  "info": {
    "singularName": "credito",
    "pluralName": "creditos",
    "displayName": "Credito",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "tipo_garantia": {
      "type": "text"
    },
    "valor_prestamo": {
      "type": "biginteger"
    },
    "cuotas_pagar": {
      "type": "integer"
    },
    "tasa_mes_vcdo": {
      "type": "float"
    },
    "fecha_apro": {
      "type": "date"
    },
    "fecha_desembolso": {
      "type": "date"
    },
    "soporte_garantia": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ciudad_credito": {
      "type": "text"
    },
    "id_inversionista": {
      "type": "biginteger"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "creditos"
    },
    "inversions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::inversion.inversion",
      "mappedBy": "credito"
    },
    "tasa_fi": {
      "type": "float",
      "default": 0.5
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "Activo",
        "Cancelado",
        "Mora"
      ],
      "default": "Activo"
    },
    "pagos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pago.pago",
      "mappedBy": "credito"
    },
    "tasa_plataforma": {
      "type": "float"
    }
  }
}
